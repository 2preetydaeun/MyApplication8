<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cookmap.cookandroid.com.myapplication.Recog">

    <Button
        android:id="@+id/btRecog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECOG"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="93dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btTts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTS"
        android:layout_alignBaseline="@+id/btRecog"
        android:layout_alignBottom="@+id/btRecog"
        android:layout_toEndOf="@+id/btRecog"
        android:layout_marginStart="53dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="93dp"
        android:layout_marginLeft="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etTts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="스마트디바이스"
        android:layout_below="@+id/btRecog"
        android:layout_alignStart="@+id/btRecog"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="168dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
